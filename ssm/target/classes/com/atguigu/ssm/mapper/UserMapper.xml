<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.ssm.mapper.UserMapper">

    <select id="queryUserByUsername" resultType="User">
        select id, username, password, email
        from t_user
        where username = #{username}
    </select>

    <select id="queryUserByUsernameAndPassword" resultType="User">
        select id,username,password,email from t_user where username = #{username} and password = #{password}
    </select>

    <insert id="saveUser" >
        insert into t_user (username,password,email) values (#{username},#{password},#{email})
    </insert>
</mapper>